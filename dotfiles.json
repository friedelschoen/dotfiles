{
    "@include": "./util.json",
    "@name": "merge-dotfiles",
    "@expand": "merge",
    "paths": [
        "./dotfiles",
        {
            "@include": "./services.json"
        },
        {
            "@include": "./apps.json"
        },
        {
            "@name": "bgglenda",
            "source": {
                "@expand": "fetch",
                "url": "https://github.com/9fans/plan9port/raw/afea5fc3fd16a2865d0af52563f601a4c03d8256/mac/spaceglenda.png"
            },
            "@output": [
                "@multiline",
                "mkdir -p $out/.config",
                "magick convert -resize 12.5% $source $out/.config/bgglenda.png"
            ]
        }
    ]
}