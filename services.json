{
    "@include": "util.json",
    "@define": {
        "service": {
            "@name": "service",
            "@output": [
                "@multiline",
                "mkdir -p $out/$name",
                "if [ \"x$enable\" = \"x\" ]; then",
                "  touch $out/$name/down",
                "fi",
                "echo \"$run\" > $out/$name/run"
            ]
        }
    },
    "@name": "services",
    "@expand": "merge",
    "$prefix": ".xservice",
    "$paths": [
        {
            "$name": "9wm",
            "$enable": false,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "SVDIR=.. sv check xserver > /dev/null || exit 1",
                "",
                "cd $HOMEs",
                "exec 9wm"
            ],
            "@expand": "service"
        },
        {
            "$name": "battery-applet",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec cbatticon"
            ],
            "@expand": "service"
        },
        {
            "$name": "blueman-applet",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec blueman-applet"
            ],
            "@expand": "service"
        },
        {
            "$name": "dbus-session",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec dbus-daemon --nofork --session"
            ],
            "@expand": "service"
        },
        {
            "$name": "dwm",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "cd $HOME",
                "exec dwm"
            ],
            "@expand": "service"
        },
        {
            "$name": "nm-applet",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec nm-applet"
            ],
            "@expand": "service"
        },
        {
            "$name": "pa-applet",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec pa-applet"
            ],
            "@expand": "service"
        },
        {
            "$name": "slstatus",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "FIFO=/tmp/slstatus.fifo",
                "",
                "[ -p $FIFO ] || rm -f $FIFO",
                "mkfifo $FIFO",
                "",
                "exec slstatus -p $FIFO"
            ],
            "@expand": "service"
        },
        {
            "$name": "slstatus-xbps",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/bash",
                "",
                "OUTPUT=/tmp/xbps-updates.txt",
                "",
                "while true; do",
                "    updates=$(xbps-install -Mun | wc -l)",
                "",
                "    if [ $updates -ne 0 ]; then",
                "        echo $updates > $OUTPUT",
                "    else",
                "        echo up-to-date > $OUTPUT",
                "    fi",
                "    sleep 120",
                "done"
            ],
            "@expand": "service"
        },
        {
            "$name": "stw-service",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "exec stw -p 1 -B 10 -y 20 psvstat ~/.xservice/*"
            ],
            "@expand": "service"
        },
        {
            "$name": "tiramisu",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "SVDIR=.. sv check slstatus > /dev/null || exit 1",
                "",
                "exec tiramisu -o '\\\\x04#source\\\\x05#summary: #body\\\\n' | xargs -i printf '%b' '{}' > /tmp/slstatus.fifo"
            ],
            "@expand": "service"
        },
        {
            "$name": "udiskie",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec udiskie -ant"
            ],
            "@expand": "service"
        },
        {
            "$name": "xfce-polkit",
            "$enable": true,
            "$run": [
                "@multiline",
                "#!/bin/sh",
                "",
                "exec /usr/libexec/xfce-polkit"
            ],
            "@expand": "service"
        }
    ]
}